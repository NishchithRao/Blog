---
type Props = Partial<HTMLAnchorElement> & { active?: boolean };

const { href, target, active = true } = Astro.props;
const resolvedUrl = import.meta.env.BASE_URL + href;
---

<style>
  .link.active {
    border-bottom: 3px dotted rgb(var(--foreground-color));
  }
  .link {
    padding-bottom: 2px;
    text-transform: capitalize;
  }
</style>

<a class:list={["link", { active: active }]} href={resolvedUrl} target={target}>
  <slot />
</a>
