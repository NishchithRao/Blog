---
type Props = Partial<HTMLAnchorElement> & { active?: boolean };

const { href, target, active = true } = Astro.props;
---

<style>
  .link.active {
    border-bottom: 3px dotted rgb(var(--foreground-color));
  }
  .link {
    padding-bottom: 2px;
    text-transform: capitalize;
  }
</style>

<a class:list={["link", { active: active }]} href={href} target={target}
  ><slot /></a
>
